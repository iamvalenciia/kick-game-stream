# Fight Club - Go Engine Configuration

# Kick Streaming
STREAM_KEY_KICK=your_stream_key_here
CLIENT_ID_KICK=your_client_id_here
CLIENT_SECRET_KICK=your_client_secret_here
KICK_BROADCASTER_USER_ID=your_broadcaster_user_id

# Webhook Configuration (use ngrok or localtunnel URL)
PUBLIC_URL=https://your-tunnel-url.ngrok.io

# Redis Cloud (optional)
REDIS_PUBLIC_ENDPOINT=your_redis_endpoint:port
REDIS_PASSWORD=your_redis_password

# MongoDB Atlas (optional)
MONGODB_CLUSTER_USERNAME=your_mongodb_username
MONGODB_CLUSTER_PASSWORD=your_mongodb_password

# Server Config
PORT=3000

# Game Config
MAX_PLAYERS=100
GAME_TICK_RATE=30
STREAM_FPS=30
STREAM_BITRATE=4500

# Event Logging
EVENT_LOG_PATH=events.jsonl

# Debug Server (disable in production)
DISABLE_DEBUG_SERVER=false
